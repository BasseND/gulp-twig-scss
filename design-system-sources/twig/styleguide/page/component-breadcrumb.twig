{% extends "../../_html-styleguide.twig" %}

{% set title = 'Breadcrumb Component' %}
{% set bodyclass = 'sg-body-wrapper' %}

{% block sg_main_title %}
    <h2 class="sg-title">Breadcrumb</h2>
{% endblock %}

{% block main %}

    {% embed "../layout/callout.twig" with {
        callout_type: "sg-callout-warning"
    } %}
        {% block sg_callout_content %}
            <h3 class="mt-5">Accessibilité</h3>
            <p>
                Sur la nav mettre un role <code>aria-label="Fil d'ariane"</code>
                <br>
                Sur l'item <code>&lt;li&gt;</code> complété, il faut ajouter la class <code>complete</code>
                <br>
                Sur l'item <code>&lt;li&gt;</code> en cours, il faut ajouter la class <code>active</code> et ajouter un attribut <code>aria-current="page"</code>
            </p>
        {% endblock %}
    {% endembed %}

    {% include "../../site/component/breadcrumb/breadcrumb.twig" %}
    {% set path_code = '../../../site/component/breadcrumb/breadcrumb.twig' %}
    {% set collapse_id = '00' %}
    {% include "../layout/code/collapse.twig" %}

    <h2 class="sg-title">Steplist</h2>

    {% embed "../layout/callout.twig" with {
