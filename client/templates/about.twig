{% extends "layouts/default.twig" %}

{% block content %}
    
    <!-- ================== Block Main Top ================== -->
    {% include 'blocks/block-main-top.twig' %}
    <div class="container">
        <div class="boxed">
            <div class="col-lg-6 boxed-left-side">
                <h3 class="font-weight-bolder text-uppercase text-success">We are the IOT Agency</h3>
                <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Laborum quos minus saepe.</p>
                <em>Analysis for your IOT Projects</em>
            </div>
            <div class="col-lg-6 boxed-right-side">
                <h3 class="font-weight-bolder text-uppercase text-warning">Connected, Collect and Analyze</h3>
                <blockquote>
                    <p class="lead">Weather stations, motion detections or heat maps with any sensor on connected devices</p>
                    <cite>&mdash; We covered all your dashboard analytics data</cite>
                </blockquote>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="text-center my-5 py-5">
            <div class="card-deck no-gutters">
                {% for service in services %}
                {% set disc = 2 %} 
                <div class="col-sm-12 col-md-6 col-lg-3 position-relative">
                    <div class="card rounded mb-4">
                        <!-- <img class="card-img-top" src="{{ promo.image }}" alt="{{ service.title }}"> -->
                        <div class="card-header">                                
                            <h4 class="card-title m-0 p-0">{{ service.title }}</h4>
                        </div>
                        <div class="card-body text-left">
                            <p class="card-text">{{ service.description }}</p>
                            <span class="font-lead-base font-weight-bold">{{disc}}0% Off!</span>
                            <div class="promotion-promo">$ {{service.price - disc % 100}}</div>
                            <div class="promotion-price">$ {{service.price}}</div>
                        </div>
                        <div class="card-footer"><a href="#" class="btn btn-warning">Order</a></div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>  
    </div>

    <!-- ================== Block Main Bottom ================== -->
    <div class="container my-5">
        {% include 'blocks/block-main-bottom.twig' %}
    </div>

{% endblock %}